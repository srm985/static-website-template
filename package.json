{
  "author": "Sean McQuay",
  "description": "A simple template to conceptually demo the creation of a static website without the use of frameworks.",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "autoprefixer": "^9.7.3",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "concurrently": "^5.0.2",
    "copyfiles": "^2.1.1",
    "cross-env": "^6.0.3",
    "css-loader": "^3.4.2",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.0.6",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.13.0",
    "sass-loader": "^8.0.1",
    "style-loader": "^1.1.2",
    "stylelint": "^12.0.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-declaration-block-no-ignored-properties": "^2.2.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.13.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "license": "MIT",
  "main": "index.js",
  "name": "static-website-template",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --mode=production",
    "build:css": "node-sass src/styles/styles.scss | postcss > dist/styles.css",
    "copy:assets": "",
    "copy:html": "",
    "develop": "cross-env NODE_ENV=development",
    "lint": "concurrently --raw \"npm:lint:html\" \"npm:lint:js\" \"npm:lint:scss\"",
    "lint:fix": "concurrently --raw \"npm:lint:fix:js\" \"npm:lint:fix:scss\"",
    "lint:fix:js": "eslint ./*.js src/**/*.js --fix",
    "lint:fix:scss": "stylelint src/**/*.scss --syntax scss --color --allow-empty-input --fix",
    "lint:html": "",
    "lint:js": "eslint ./*.js src/**/*.js",
    "lint:scss": "stylelint src/**/*.scss",
    "start": "",
    "test": "",
    "watch": ""
  },
  "version": "1.0.0"
}
